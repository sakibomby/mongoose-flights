<%- include('../partials/header') %>

<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
  <label>Airline:
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
        <option value="Alaska">Alaska</option>
        <option value="Jetblue">Jetblue</option>
      </select>
    </label><br>
  <label>Airport:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="SEA-TAC">SEA-TAC</option>
      <option value="SNA" selected>SNA</option>
    </select>
  </label><br>
  <label>Flight Number:
    <input type="number" name="flightNo" min="10" max="9999">
  </label><br>
  <label>Departs:
    <input type="datetime-local" name="departs" value="yyy-MM-ddThh:mm">
  </label><br>
  <button type="submit">Add Flight</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>
